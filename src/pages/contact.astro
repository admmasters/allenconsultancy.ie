---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact">
	<div class="contact-container">
		<h1 class="tilt-in-top">Contact Me</h1>
		
		<div class="contact-content">
			<div class="contact-info slide-in-blurred-left">
				<h2>Get in Touch</h2>
				<p>
					If you'd like to inquire about my services, discuss a potential collaboration,
					or have any questions, please feel free to reach out through the contact form
					or using the information below.
				</p>
				
				<div class="contact-details">
					<div class="contact-item icon-pulse">
						<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M20 4H4C2.9 4 2 4.9 2 6V18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V6C22 4.9 21.1 4 20 4Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							<path d="M22 6L12 13L2 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
						<span class="slide-in-text">debbie@allenconsultancy.ie</span>
					</div>
					
					<div class="contact-item icon-pulse">
						<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M22 16.92V19.92C22 20.4704 21.7893 20.9996 21.4142 21.3747C21.0391 21.7498 20.5099 21.9605 19.96 21.96C16.4443 21.7856 13.0488 20.5341 10.1879 18.3896C7.5474 16.4481 5.4305 13.8861 4.09 10.92C2.99421 7.9954 2.44185 4.79283 2.56 1.56C2.56946 1.01105 2.78034 0.482934 3.15456 0.108702C3.52879 -0.26553 4.05765 -0.476346 4.606 -0.47H7.606C8.6491 -0.483678 9.53864 0.329621 9.7 1.35C9.82143 2.14124 10.0296 2.91705 10.32 3.66C10.5452 4.23002 10.4815 4.86704 10.15 5.38L8.81 7.38C10.0393 10.0811 12.1987 12.2405 14.9 13.47L16.9 12.13C17.413 11.7985 18.05 11.7348 18.62 11.96C19.363 12.2504 20.1388 12.4586 20.93 12.58C21.9613 12.7421 22.7812 13.6463 22.75 14.69L22 16.92Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
						<span class="slide-in-text">085 778 4678</span>
					</div>
				</div>
			</div>
			
			<div class="contact-form-container slide-in-blurred-right">
				<form class="contact-form">
					<div class="form-group form-animation">
						<label for="name">Name</label>
						<input type="text" id="name" name="name" required />
					</div>
					
					<div class="form-group form-animation">
						<label for="email">Email</label>
						<input type="email" id="email" name="email" required />
					</div>
					
					<div class="form-group form-animation">
						<label for="subject">Subject</label>
						<input type="text" id="subject" name="subject" required />
					</div>
					
					<div class="form-group form-animation">
						<label for="message">Message</label>
						<textarea id="message" name="message" rows="5" required></textarea>
					</div>
					
					<button type="submit" class="submit-button shake-on-hover">Send Message</button>
				</form>
			</div>
		</div>
	</div>
</Layout>

<style>
	.contact-container {
		padding: 2rem 0;
	}

	h1 {
		font-size: clamp(2.5rem, 5vw, 3.5rem);
		font-weight: 500;
		margin-bottom: 2.5rem;
	}

	.contact-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3rem;
	}

	.contact-info, .contact-form-container {
		background-color: rgba(0, 0, 0, 0.3);
		border-radius: 8px;
		padding: 2rem;
		backdrop-filter: blur(5px);
	}

	h2 {
		font-size: clamp(1.5rem, 3vw, 2rem);
		color: var(--color-primary);
		margin-bottom: 1.5rem;
	}

	p {
		margin-bottom: 1.5rem;
		font-size: clamp(1rem, 1.2vw, 1.1rem);
		line-height: 1.6;
	}

	.contact-details {
		margin-top: 2rem;
	}

	.contact-item {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 1rem;
	}

	.contact-item svg {
		color: var(--color-primary);
	}

	.form-group {
		margin-bottom: 1.5rem;
	}

	label {
		display: block;
		margin-bottom: 0.5rem;
		font-size: 0.9rem;
	}

	input, textarea {
		width: 100%;
		padding: 0.75rem;
		border: none;
		border-radius: 4px;
		background-color: rgba(255, 255, 255, 0.1);
		color: var(--color-text);
		font-family: inherit;
	}

	textarea {
		resize: vertical;
	}

	.submit-button {
		background-color: var(--color-primary);
		color: var(--color-text);
		border: none;
		padding: 0.75rem 1.5rem;
		border-radius: 4px;
		cursor: pointer;
		font-weight: 500;
		transition: background-color 0.2s;
		width: 100%;
	}

	.submit-button:hover {
		background-color: #d35400;
	}

	@media (max-width: 768px) {
		.contact-container {
			padding: 1rem 0;
		}
		
		.contact-content {
			grid-template-columns: 1fr;
			gap: 2rem;
		}
		
		/* Adjust animation timing for mobile */
		.slide-in-blurred-left,
		.slide-in-blurred-right {
			animation-duration: 0.3s;
		}
		
		.form-animation:nth-child(1) { animation-delay: 0.1s; }
		.form-animation:nth-child(2) { animation-delay: 0.15s; }
		.form-animation:nth-child(3) { animation-delay: 0.2s; }
		.form-animation:nth-child(4) { animation-delay: 0.25s; }
	}

	/* Animation styles */
	@keyframes tiltInTop {
		0% {
			transform: rotateY(-30deg) translateY(-300px) skewY(30deg);
			opacity: 0;
		}
		100% {
			transform: rotateY(0deg) translateY(0) skewY(0deg);
			opacity: 1;
		}
	}

	@keyframes slideInBlurredLeft {
		0% {
			transform: translateX(-100px) scaleX(2.5) scaleY(0.2);
			transform-origin: 100% 50%;
			filter: blur(40px);
			opacity: 0;
		}
		100% {
			transform: translateX(0) scaleY(1) scaleX(1);
			transform-origin: 50% 50%;
			filter: blur(0);
			opacity: 1;
		}
	}

	@keyframes slideInBlurredRight {
		0% {
			transform: translateX(100px) scaleX(2.5) scaleY(0.2);
			transform-origin: 0% 50%;
			filter: blur(40px);
			opacity: 0;
		}
		100% {
			transform: translateX(0) scaleY(1) scaleX(1);
			transform-origin: 50% 50%;
			filter: blur(0);
			opacity: 1;
		}
	}

	@keyframes slideInText {
		0% {
			transform: translateX(-20px);
			opacity: 0;
		}
		100% {
			transform: translateX(0);
			opacity: 1;
		}
	}

	@keyframes iconPulse {
		0% {
			transform: scale(1);
			opacity: 1;
		}
		50% {
			transform: scale(1.2);
			opacity: 0.8;
		}
		100% {
			transform: scale(1);
			opacity: 1;
		}
	}

	@keyframes formSlideUp {
		0% {
			transform: translateY(30px);
			opacity: 0;
		}
		100% {
			transform: translateY(0);
			opacity: 1;
		}
	}

	@keyframes shake {
		0%, 100% {
			transform: translateX(0);
		}
		10%, 30%, 50%, 70%, 90% {
			transform: translateX(-5px);
		}
		20%, 40%, 60%, 80% {
			transform: translateX(5px);
		}
	}

	.tilt-in-top {
		animation: tiltInTop 0.4s cubic-bezier(0.250, 0.460, 0.450, 0.940) both;
	}

	.slide-in-blurred-left {
		animation: slideInBlurredLeft 0.4s cubic-bezier(0.230, 1.000, 0.320, 1.000) 0.05s both;
	}

	.slide-in-blurred-right {
		animation: slideInBlurredRight 0.4s cubic-bezier(0.230, 1.000, 0.320, 1.000) 0.05s both;
	}

	.slide-in-text {
		display: inline-block;
		animation: slideInText 0.4s ease-out forwards;
	}

	.icon-pulse svg {
		animation: iconPulse 2s infinite;
	}

	.contact-item:nth-child(1) .slide-in-text {
		animation-delay: 0.15s;
	}

	.contact-item:nth-child(2) .slide-in-text {
		animation-delay: 0.2s;
	}

	.form-animation {
		opacity: 0;
		animation: formSlideUp 0.4s ease-out forwards;
	}

	.form-animation:nth-child(1) { animation-delay: 0.15s; }
	.form-animation:nth-child(2) { animation-delay: 0.2s; }
	.form-animation:nth-child(3) { animation-delay: 0.25s; }
	.form-animation:nth-child(4) { animation-delay: 0.3s; }

	.shake-on-hover:hover {
		animation: shake 0.4s ease-in-out;
	}

	/* Interactive elements */
	.contact-info, .contact-form-container {
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.contact-info:hover, .contact-form-container:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
	}

	input, textarea {
		transition: transform 0.2s ease, background-color 0.3s ease;
	}

	.subscribe-form input:focus, textarea:focus {
		transform: scale(1.02);
		background-color: rgba(255, 255, 255, 0.15);
		outline: none;
		border: 1px solid var(--color-primary);
	}

	.contact-item {
		transition: transform 0.3s ease;
	}

	.contact-item:hover {
		transform: translateX(5px);
	}
</style>

<script>
	// Client-side form handling script
	document.addEventListener('DOMContentLoaded', () => {
		const form = document.querySelector('.contact-form');
		
		if (form) {
			form.addEventListener('submit', (e) => {
				e.preventDefault();
				// In a real implementation, you would send the form data to a server
				// or use a form service like Formspree or Netlify Forms
				
				alert('Thank you for your message! I will get back to you soon.');
				form.reset();
			});
		}
	});
</script>
