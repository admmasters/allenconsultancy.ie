<style>
	:root {
		--color-primary: #e67e22;
		--color-text: #ffffff;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		color: var(--color-text);
		line-height: 1.5;
	}

	.container {
		min-height: 100vh;
		background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/background.jpg');
		background-size: cover;
		background-position: center;
	}

	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1.5rem 2rem;
	}

	.logo {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-weight: bold;
	}

	.logo img {
		height: 2rem;
	}

	.nav-links {
		display: flex;
		gap: 2rem;
	}

	.nav-links a {
		color: var(--color-text);
		text-decoration: none;
		font-size: 1rem;
		transition: opacity 0.2s;
	}

	.nav-links a:hover {
		opacity: 0.8;
	}

	.get-in-touch {
		background-color: var(--color-primary);
		color: var(--color-text);
		border: none;
		padding: 0.75rem 1.5rem;
		border-radius: 4px;
		cursor: pointer;
		font-weight: 500;
		transition: background-color 0.2s;
	}

	.get-in-touch:hover {
		background-color: #d35400;
	}

	main {
		max-width: 1200px;
		margin: 0 auto;
		padding: 6rem 2rem;
	}

	h1 {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 500;
		line-height: 1.2;
		margin-bottom: 2rem;
	}

	p {
		max-width: 600px;
		font-size: clamp(1rem, 1.5vw, 1.25rem);
		margin-bottom: 3rem;
		opacity: 0.9;
	}

	.scroll-indicator {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
		opacity: 0.8;
		animation: bounce 2s infinite;
	}

	.arrow-down {
		margin-top: 0.5rem;
	}

	@keyframes bounce {
		0%, 20%, 50%, 80%, 100% {
			transform: translateY(0);
		}
		40% {
			transform: translateY(-10px);
		}
		60% {
			transform: translateY(-5px);
		}
	}

	@media (max-width: 768px) {
		.nav-links {
			display: none;
		}

		main {
			padding: 4rem 1.5rem;
		}
	}
</style>
